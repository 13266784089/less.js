<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Jasmine Spec Runner</title>

    <% var generateScriptTags = function(allScripts) { allScripts.forEach(function(script){ %>
        <script src='<%= script %>'></script>
    <% }); }; %>

    <!-- for each test, generate CSS/LESS link tags -->

    <%
      var all = scripts.specs[0].indexOf('runner-all-spec') > -1;
      var subSpecs = []; 

      scripts.src.forEach(function(fullLessName) {
        var pathParts = fullLessName.split('/');
        var fullCssName = fullLessName.replace(/less/g, 'css');
        var subfolder = pathParts[pathParts.indexOf('less') + 1];
        var lessName = pathParts[pathParts.length - 1];
        var name = lessName.split('.')[0]; 
        if (!all) {
        %>
        <link id="original-less:test-less-<%= name %>" title="test-less-<%= name %>" rel="stylesheet/less" type="text/css" href="<%= fullLessName %>" media="projection">
        <link id="expected-less:test-less-<%= name %>" rel="stylesheet" type="text/css" href="<%= fullCssName %>" media="projection">
    <% 
        }
        else {
          subSpecs.push('[\"' + fullLessName + '\", \"' + subfolder + '\"]');
        }
      }); %>

    <!-- generate grunt-contrib-jasmine link tags -->
    <% css.forEach(function(style){ %>
      <link rel="stylesheet" type="text/css" href="<%= style %>">
    <% }) %>
    <script>
          window.jasmine = { getJSReport: function() { } };
          var specArray = [<%= subSpecs.join() %>];
          var specs = {};
          specArray.forEach(function(spec) {
            if(!specs[spec[1]]) {
              specs[spec[1]] = [ spec[0] ];
            }
            else {
              specs[spec[1]].push(spec[0]);
            }
          });
           
    </script>

  <%
        var jasmine = [].concat(scripts.polyfills, scripts.jasmine, scripts.boot),
            helpers = scripts.helpers,
            vendor = scripts.vendor,
            reporters = [].concat(scripts.reporters),
            specs = scripts.specs,
            allScripts = jasmine.concat(helpers).concat(vendor).concat(specs).concat(reporters);
    
        generateScriptTags(allScripts);
    %>
  </head>

  <body>
  <!-- content -->
    
  </body>
</html>
